{
    "title": "All",
    "commands": {
        "i": {
            "title": "Internet",
            "commands": {
                "p": {
                    "title": "Ping",
                    "task": "ping -c 4",
                    "params": [
                        "host"
                    ]
                },
                "s": {
                    "title": "SSH",
                    "task": "ssh",
                    "params": [
                        "host"
                    ]
                }
            }
        },
        "l": {
            "title": "Count my GitHub repositories",
            "task": "ls | wc -l",
            "directory": "/users/ismail/_repositories"
        },
        "s": {
            "title": "System",
            "commands": {
                "s": {
                    "title": "Shutdown",
                    "task": "sudo shutdown -t",
                    "params": [
                        "time-to-shutdown-in-seconds"
                    ]
                },
                "r": {
                    "title": "Reboot",
                    "task": "sudo reboot -t",
                    "params": [
                        "time-to-reboot-in-seconds"
                    ]
                }
            }
        }
    }
}
